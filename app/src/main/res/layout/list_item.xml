<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:drawSelectorOnTop="true"
    android:orientation="horizontal"
    android:padding="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/list_item_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/textDark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginTop="@dimen/item_margin"
                android:fontFamily="sans-serif"
                android:text="@string/list_item_category_price"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textDark" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_margin"
                android:fontFamily="sans-serif"
                android:text="@string/list_item_price"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin"
                android:fontFamily="sans-serif"
                android:text="@string/list_item_category_quantity"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textLight" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/list_item_quantity"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textLight" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sale_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/list_item_buy_button" />
</LinearLayout>